<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gaby.mapper.dao.StudentDao">

    <select id="query" resultType="com.gaby.stu.model.student.query.Response" parameterType="map">
      SELECT
        s_id AS id,
        s_name AS `name`,
        s_sex AS sex
      FROM
	    student
	  WHERE
	    s_id='01'
	    <if test="item.name !=null">
            AND s_name=#{item.name}
        </if>
    </select>
    <select id="list" resultType="com.gaby.stu.model.student.list.Item">
        SELECT
          s_id AS id,
          s_name AS `name`,
          s_sex AS sex
        FROM
          student
    </select>
</mapper>